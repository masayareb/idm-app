<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with model: @user,url: registration_path(current_user), local: true do |f| %>
  <%= devise_error_messages! %>

  <div class="form-update">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 山田 太郎", maxlength:"40" %>
    </div>
    <div class="field">
      <%= f.label :所属 %><br />
      <%= f.text_area :affiliation, class:"input-default", id:"affiliation", placeholder:"例) 福岡支社", maxlength:"40"  %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "更新", class:"register-red-btn"%>
    </div>
  </div>
<% end %>



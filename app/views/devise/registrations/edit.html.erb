<%= render "shared/second-header" %>

<%= form_with model: @user,url: registration_path(current_user),class: 'registration-main', local: true do |f| %>

  <%= devise_error_messages! %>

  <div class="form-update">
    <h2 class='edit-user-title'>ユーザ情報変更画面</h2>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,class:"input-default", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_area :name, class:"input-text", id:"name", placeholder:"例) 山田 太郎", maxlength:"40" %>
    </div>
    <div class="field">
      <%= f.label :所属 %><br />
      <%= f.text_area :affiliation, class:"input-text", id:"affiliation", placeholder:"例) 福岡支社", maxlength:"40"  %>
    </div>

    <div class="field">
      <%= f.label :現在のパスワード %><br />
      <%= f.password_field :current_password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "更新", class:"register-red-btn"%>
    </div>

  </div>
<% end %>




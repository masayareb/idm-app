<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 山田 太郎", maxlength:"40" %>
    <div class='form-text-wrap'>
      <label class="form-text">社員番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :employee_number, class:"input-default", id:"employee_number", placeholder:"例) 1234", maxlength:"20" %>
    <div class='form-text-wrap'>
      <label class="form-text">所属</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :affiliation, class:"input-default", id:"affiliation", placeholder:"例) 福岡支社", maxlength:"40" %>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上12文字以内の半角英数字" %>
    <p class='info-text'>※小文字大文字英字と数字を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>
  </div>
  
<% end %>
<%= render "shared/second-header" %>

<%= form_with model: @user,url: user_path(@user.id),class: 'registration-main', local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="admin-form-update">
    <h2 class='edit-user-title'>ユーザ情報変更画面（<%= @user.name%>）</h2>

    <div class="field">
      <%= f.label :email %><span class="indispensable">必須</span><br />
      <%= f.email_field :email,class:"input-default", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :社員番号 %><span class="indispensable">必須</span><br />
      <%= f.text_field :employee_number, class:"input-default", id:"employee_number", placeholder:"例) 1234", maxlength:"20" %>
    </div>

    <div class="field">
      <%= f.label :名前 %><span class="indispensable">必須</span><br />
      <%= f.text_area :name, class:"input-text", id:"name", placeholder:"例) 山田 太郎", maxlength:"40" %>
    </div>
    <div class="field">
      <%= f.label :所属 %><span class="indispensable">必須</span><br />
      <%= f.text_area :affiliation, class:"input-text", id:"affiliation", placeholder:"例) 福岡支社", maxlength:"40"  %>
    </div>

    <div class="field">
      <%= f.label :管理者ユーザ %><br />
      <%= f.check_box :admin, class:"input-check-box" %>
    </div>

    <div>
      <div class='register-btn'>
        <%= f.submit "更新", class:"register-red-btn"%>
      </div>

      <div class="input-btn-contents">
        <%=link_to 'もどる', users_path, class:"back-btn" %>
      </div>
    </div>

</div>

<% end %>


<%= render "shared/second-header" %>

<div class="admin-user-contents">
  <div class='admin-user-contents-top'>
    ユーザ一覧
  </div>
  <%= link_to "csv出力", data_exports_user_export_csv_path(format: :csv) ,class:'list-hover btn-style'%>
  
  <table>
    <thead>
      <tr>
        <th>操作</th>    
        <th>社員番号</th>
        <th>名前</th>
        <th>Email</th>
        <th>所属</th>
        <th>管理者</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "編集する", edit_user_path(user.id) %>
              <%= link_to "削除する", user_path(user.id), method: :delete %></td>
          <td><%= user.employee_number %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.affiliation %></td>
          <td><%= user.admin %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="input-btn-contents">
  <%=link_to 'もどる', root_path, class:"back-btn" %>
</div>